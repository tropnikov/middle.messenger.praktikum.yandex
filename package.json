{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "Max Tropnikov",
  "repository": {
    "type": "git",
    "url": "https://github.com/tropnikov/middle.messenger.praktikum.yandex"
  },
  "engines": {
    "node": "v22.2.0"
  },
  "scripts": {
    "dev": "vite",
    "format": "prettier --write .",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "stylelint": "stylelint 'src/**/*.css'",
    "stylelint:fix": "stylelint 'src/**/*.css' --fix",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "build": "npm run lint:fix && npm run stylelint:fix && npm run format && tsc && vite build",
    "start": "vite build && vite preview",
    "test": "mocha --no-warnings",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@types/chai": "^5.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@types/sinon": "^17.0.4",
    "chai": "^5.2.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "mocha": "^11.7.0",
    "prettier": "3.3.3",
    "sinon": "^19.0.5",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0",
    "vite": "^5.4.8",
    "vite-plugin-checker": "^0.8.0"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "uuid": "^11.0.4",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.css": [
      "stylelint --fix"
    ],
    "src/**/*.ts": [
      "npm run typecheck"
    ]
  }
}
